#divide by 255 if you have actual RGB values

<frontPage>

    #create an embedded box
    BoxLayout:
        orientation: "vertical"
        size: root.width,root.height

        #adds padding and spacing between each label/button
        padding: 50
        spacing: 8

        Label:
            text: "POS System Starting Screen"

            #font properties
            font_size: self.width/20
            bold: True
            italic: True
            outline_color:(0,0,0)
            outline_width: 2

            #size of Label
            size_hint_y: 0.8


            #adding colors to Labels
            background_color:(153/255,145/255,146/255,0.5)
            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
                    size: self.size
                    pos: self.pos

        Button:
            text: "Log In"

            #font properties
            font_size:self.height/2.50
            pos_hint:{'center_x':0.50}
            bold: True
            outline_color:(0,0,0)
            outline_width: 2

            #height and proportions of button
            size_hint_y:0.20
            height:80

            
            #background color
            background_normal: ''
            background_color: (41/255,75/255,150/255,0.5)

            on_press:
                root.manager.transition.direction = 'left'
                root.manager.transition.duration = 1
                root.manager.current = 'login'

        Button:
            text: "Log In As Guest"

            #font properties
            font_size:self.height/2.50
            pos_hint:{'center_x':0.50}
            bold: True
            outline_color:(0,0,0)
            outline_width: 2

            #height and proportions of button
            size_hint_y:0.20
            height:80

            
            #background color properties
            background_normal: ''
            background_color: (41/255,75/255,150/255,0.5)

            #button press action to transition to new screen
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.transition.duration = 1
                root.manager.current = 'main'


        Button:

            text: "Admin Log In"

            #font properties
            font_size:self.height/2.50
            pos_hint:{'center_x':0.50}
            bold: True
            outline_color:(0,0,0)
            outline_width: 2

            #height and proportions of button
            size_hint_y:0.20
            height:80

            
            #background color
            background_normal: ''
            background_color: (41/255,75/255,150/255,0.5)

            #button press action to transition to new screen
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.transition.duration = 1
                root.manager.current = 'adminLogin'
