#can use this to grab hex color code instead of rgb
#:import utils kivy.utils

#screen where you can log in
<helpScreen>
    #create the outside box layout
    BoxLayout:
        orientation:"vertical"
        size:root.width,root.height

        padding: 75
        spacing: 7

	  #embedded box layout that includes the labels and text inputs
        BoxLayout:
            orientation: "horizontal"
            size: root.width,root.height

            Label:
                text: "User Name:"
                font_size: 25

                background_color:(153/255,145/255,146/255,0.5)
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size: self.size
                        pos: self.pos
                #Text Properties
                #color: (125/255,105/255,99/255,1)
                bold: True
                italic: True
                outline_color:(0,0,0)
                outline_width: 2

            TextInput:
                id: user
                multiline:False

        BoxLayout:
            orientation: "horizontal"
            size: root.width,root.height

            Label:
                text: "Email:"
                font_size: 25

                background_color:(153/255,145/255,146/255,0.5)
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size: self.size
                        pos: self.pos
                #Text Properties
                #color: (125/255,105/255,99/255,1)
                bold: True
                italic: True
                outline_color:(0,0,0)
                outline_width: 2

            TextInput:
                id: pass
                multiline:False


        Button:
            text:"Go Back"
            font_size:20
            size_hint_y:None
            #size_hint:(None,None)
            height:100
            background_normal: ''
            #divide by 255 if you have actual RGB values
            background_color: (41/255,75/255,150/255,0.5)

            bold: True
            outline_color:(0,0,0)
            outline_width: 2

            on_press:
                root.manager.transition.direction = 'right'
                root.manager.transition.duration = 1
                root.manager.current = 'login'
