<cart>
    BoxLayout:
        orientation:"vertical"
        size:self.size #root.width, root.height
        padding: 5

        background_color: (10/255, 2/255, 48/255, 1)
        canvas.before:
            Color:
                rgba: self.background_color
            Rectangle:
                size: self.size
                pos: self.pos

        BoxLayout:
            orientation:"horizontal"
            size_hint:(1,None)
            height:30

            pos_hint:{'center_x':0.5}

            Button:
                text:"Back"
                font_size:12

                size_hint:(None,None)
                height:25

                background_normal:""
                background_color:(87/255,87/255,94/255,1)

                on_press:
                    root.manager.transition.direction = 'right'
                    root.manager.transition.duration = 1
                    root.manager.current = 'main'

            Label:
                text:" "

                size_hint:(1,None)
                height:25
                width: 500

                background_normal:""
                #background_color:(87/255,87/255,94/255,1)
                canvas.before:
                    Color:
                        rgba: 87/255,87/255,94/255,1
                    Rectangle:
                        size: self.size
                        pos: self.pos

#testing the grid layout
                
        BoxLayout:
            orientation: "horizontal"
            #size:root.width,root.height
            size_hint:(1,1)
            
            spacing: 4
            padding: 5

            #ScrollView:
                #MDList:
                    #id: itemlist
            
            Label:
                size_hint:(1,0.75)
                text: "Name:"
                font_size: 25

                background_color:(153/255,145/255,146/255,0.5)
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size: self.size
                        pos: self.pos
                #Text Properties
                #color: (125/255,105/255,99/255,1)
                bold: True
                italic: True
                outline_color:(0,0,0)
                outline_width: 2

            TextInput:
                size_hint:(1,0.75)
                font_size: 30
                id: user
                multiline:False

        BoxLayout:
            orientation: "horizontal"
            #size: root.width,root.height
            #size_hint:(1,1)
            
            spacing: 15
            padding: 5
            
            Label:
                text: "Email:"
                font_size: 25
                size_hint:(1,0.75)

                background_color:(153/255,145/255,146/255,0.5)
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size: self.size
                        pos: self.pos
                #Text Properties
                #color: (125/255,105/255,99/255,1)
                bold: True
                italic: True
                outline_color:(0,0,0)
                outline_width: 2

            TextInput:
                size_hint:(1,0.75)
                font_size: 30
                id: pass

                multiline:False
               

        BoxLayout:
            orientation: "horizontal"
            size:root.width,root.height

            spacing: 10
            padding: 5

            Button:
                text:"Click to Pay with Credit Card"
                font_size:20
                size_hint:(0.5,1)
                pos_hint: {'center_x':.5}
            
            Button:
                text:"Click to Pay with Cash"
                font_size:20
                size_hint:(0.5,1)
                pos_hint: {'center_x':.5}