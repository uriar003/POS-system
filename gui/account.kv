#can use this to grab hex color code instead of rgb
#:import utils kivy.utils

<account>
    id:file_widget
    #create an embedded box
    BoxLayout:
        orientation:"vertical"
        size:root.width,root.height
        padding: 5

        background_color: (10/255, 2/255, 48/255, 1)
        canvas.before:
            Color:
                rgba: self.background_color
            Rectangle:
                size: self.size
                pos: self.pos

        BoxLayout:
            orientation:"horizontal"
            size_hint:(1,None)
            height:30

            pos_hint:{'center_x':0.5}

            Button:
                text:"Back"
                font_size:12

                size_hint:(None,None)
                height:25

                background_normal:""
                background_color:(87/255,87/255,94/255,1)

                on_press:
                    root.manager.transition.direction = 'left'
                    root.manager.transition.duration = 1
                    root.manager.current = 'main'

            Label:
                text:" "

                size_hint:(1,None)
                height:25
                width: 500

                background_normal:""
                #background_color:(87/255,87/255,94/255,1)
                canvas.before:
                    Color:
                        rgba: 87/255,87/255,94/255,1
                    Rectangle:
                        size: self.size
                        pos: self.pos

        ScrollView:
            FileChooserIconView:
                id: filechooser
                on_selection: file_widget.selected(filechooser.selection)
                #specify starting path
                path: '../backend'


        
        BoxLayout:
            orientation:"horizontal"
            pos_hint:{'center_x':0.5}
            pos_hint:{'center_y':0.5}
            padding: 20
            spacing: 20
            size_hint: (1, None)

            Button:
                text:"IMPORT"
                font_size:25

                size_hint:(2,2)
                height:25

                background_normal:""
                background_color:(87/255,87/255,94/255,1)

                #on_press: root.manager.current = app.importLogic("IMPORT", root.ids)
                on_press: print("File Imported")
                    
            Button:
                text:"EXPORT"
                font_size:25

                size_hint:(2,2)
                height:25

                background_normal:""
                background_color:(87/255,87/255,94/255,1)

                #on_press: root.manager.current = app.exportLogic("DOWNLOAD")
                on_press: print("Database Exported")
            
            Button:
                text:"EXPORT TEMPLATE"
                font_size:25

                size_hint:(2,2)
                height:25

                background_normal:""
                background_color:(87/255,87/255,94/255,1)

                #on_press: root.manager.current = app.exportLogic("DOWNLOAD_TEMPLATE",)
                on_press: print("Template Exported")

    Label:
        id: fileString
        text: "Selected File:"
        font_size:15

        size_hint_y:None
        height:20

        background_normal:""
        #background_color:(87/255,87/255,94/255,1)
        canvas.before:
            Color:
                rgba: 48/255,84/255,150/255,.7 #87/255,87/255,94/255,1
            RoundedRectangle:
                size: self.size
                pos: self.pos
