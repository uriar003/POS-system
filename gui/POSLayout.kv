# NOTES
# - I used the reference image for a POS, refer to that
# - BoxLayout is simple vs specifically setting button and list module coordinates

# IMPORTS
#: import FadeTransition kivy.uix.screenmanager.FadeTransition

WindowManager:
    wndwLogin:
    wndwPOS:

# Login screen, is initial screen
<wndwLogin>:
    name: 'Login'

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        Label:
            text: "Second Screen"
            font_size: 32

        Button:
            text: "Login"
            font_size: 32
            on_release:
                app.root.current = 'POS System'
                root.manager.transition = FadeTransition()
                root.manager.transition.direction = 'left'

# main POS window screen
<wndwPOS>:
    name: 'POS System'

    # MAIN BOX LAYOUT, holds two vertically stacked BoxLayouts within   
    BoxLayout:
        # BoxLayouts stack on top of each other, descending order top to bottom
        orientation: 'vertical'

        # TOP SUB BOXLAYOUT (company logo, blank space)
        BoxLayout:
            size_hint: 1, .1
            Label:
                text: "TOP BUTTONS"
        BoxLayout:
            size_hint: 1, .8

            ScrollView:
                size_hint: .8, 1
                MDList:
                    OneLineListItem:
                        id: item1
                        text: "Orb Meat"
                        on_release: app.onpress(self, "item1")

                    OneLineListItem:
                        id: item2
                        text: "Bajookieland Phlamp"
                        on_release: app.onpress(self, "item1")
                    OneLineListItem:
                        id: item3
                        text: "Garloid Milk"
                        on_release: app.onpress(self, "item1")
                    OneLineListItem:
                        id: item4
                        text: "Pilk"
                        on_release: app.onpress(self, "item1")
            Label:
                size_hint: .2, 1
                text: 'TOTAL'
                background_color: (250/255, 12/255, 120/255, 1)
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size: self.size
                        pos: self.pos

        # BOTTOM SUB BOXLAYOUT
        BoxLayout:
            size_hint: 1, .1
            orientation: 'horizontal'
            Label:
                size_hint: .8, 1
                text: 'ROW BTNS'
                background_color: (182/255, 66/255, 245/255, 1)
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size: self.size
                        pos: self.pos
            BoxLayout:
                orientation: 'vertical'
                size_hint: .2, 1
                background_color: (77/255, 82/255, 100/255, 1)
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size: self.size
                        pos: self.pos
                Button:
                    text: 'Checkout'
                    on_release:
                        app.root.current = 'Login'
                        root.manager.transition = FadeTransition()
                        root.manager.transition.direction = 'right'
                Button:
                    text: 'Report an Issue'
                    on_release:
                        app.root.current = 'Login'
                        root.manager.transition = FadeTransition()
                        root.manager.transition.direction = 'right'