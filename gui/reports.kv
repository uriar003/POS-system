#can use this to grab hex color code instead of rgb
#:import utils kivy.utils

<reports>

    #create an embedded box
    BoxLayout:
        orientation:"vertical"
        size:root.width,root.height
        padding: 5

        background_color: (10/255, 2/255, 48/255, 1)
        canvas.before:
            Color:
                rgba: self.background_color
            Rectangle:
                size: self.size
                pos: self.pos

        BoxLayout:
            orientation:"horizontal"
            size_hint:(1,None)
            height:30

            pos_hint:{'center_x':0.5}

            Button:
                text:"Return"
                font_size:12

                size_hint:(None,None)
                height:25

                background_normal:""
                background_color:(87/255,87/255,94/255,1)

                on_press:
                    root.manager.transition.direction = 'left'
                    root.manager.transition.duration = 1
                    root.manager.current = 'main'

            Button:
                text:"Account"
                font_size:12

                size_hint:(None,None)
                height:25

                background_normal:""
                background_color:(87/255,87/255,94/255,1)

                on_press:
                    root.manager.transition.direction = 'right'
                    root.manager.transition.duration = 1
                    root.manager.current = 'account'

            Button:
                text:"Reports"
                font_size:12

                size_hint:(None,None)
                height:25

                background_normal:""
                background_color:(87/255,87/255,94/255,1)

                on_press:
                    root.manager.transition.direction = 'right'
                    root.manager.transition.duration = 1
                    root.manager.current = 'reports'

            Label:
                text:" "

                size_hint:(1,None)
                height:25
                width: 500

                background_normal:""
                #background_color:(87/255,87/255,94/255,1)
                canvas.before:
                    Color:
                        rgba: 87/255,87/255,94/255,1
                    Rectangle:
                        size: self.size
                        pos: self.pos

            Button:
                text:"Shopping Cart"
                font_size:12

                size_hint:(None,None)
                height:25
                background_normal:""
                background_color:(87/255,87/255,94/255,1)

                on_press:
                    root.manager.transition.direction = 'right'
                    root.manager.transition.duration = 1
                    root.manager.current = 'cart'

            Button:
                text:"Log Out"
                font_size:12

                size_hint:(None,None)
                height:25

                background_normal:""
                background_color:(87/255,87/255,94/255,1)

                on_press:
                    root.manager.transition.direction = 'right'
                    root.manager.transition.duration = 1
                    root.manager.current = 'front'

#testing the grid layout
        BoxLayout:
            orientation: "horizontal"
            size:root.width,root.height

            spacing: 7

            ScrollView:
