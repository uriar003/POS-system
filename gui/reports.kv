<reports>

    #create an embedded box
    BoxLayout:
        orientation:"vertical"
        size:self.size #root.width, root.height
        padding: 5

        background_color: (10/255, 2/255, 48/255, 1)
        canvas.before:
            Color:
                rgba: self.background_color
            Rectangle:
                size: self.size
                pos: self.pos

        BoxLayout:
            orientation:"horizontal"
            size_hint:(1,None)
            height:30

            pos_hint:{'center_x':0.5}

            Button:
                text:"Back"
                font_size:12
                bold:True
                outline_color:(0,0,0)
                outline_width: 1

                size_hint:(None,None)
                height:25

                background_normal:""
                background_color:(87/255,87/255,94/255,1)

                on_press:
                    root.manager.transition.direction = 'right'
                    root.manager.transition.duration = 1
                    root.manager.current = 'main'

            Label:
                text:" "

                size_hint:(1,None)
                height:25
                width: 500

                background_normal:""
                #background_color:(87/255,87/255,94/255,1)
                canvas.before:
                    Color:
                        rgba: 87/255,87/255,94/255,1
                    Rectangle:
                        size: self.size
                        pos: self.pos

#testing the grid layout
        BoxLayout:
            orientation: "horizontal"
            size:root.width,root.height

            spacing: 7
            padding: 3

            #ScrollView:
                #MDList:
                    #id: itemlist

            Label:
                text:"Daily Sales"
                font_size: 18

                size_hint:(1,1)
            Button:
                text:"Download Report"
                font_size:20
                size_hint:(1,1)
                pos_hint: {'center_x':.5}
                on_press: root.dailySales()

        BoxLayout:
            orientation: "horizontal"
            size:root.width,root.height

            spacing: 7
            padding: 3

            Label:
                text:"Total Product Sales"
                font_size: 18

                size_hint:(1,1)

            Button:
                text:"Download Report"
                font_size:20
                size_hint:(1,1)
                on_press: root.totalProductSales()
                pos_hint: {'center_x':.5}

        BoxLayout:
            orientation: "horizontal"
            size:root.width,root.height

            spacing: 7
            padding: 3

            Label:
                text:"Sales Transactions"
                font_size: 18

                size_hint:(1,1)

            Button:
                text:"Download Report"
                font_size:20
                size_hint:(1,1)
                pos_hint: {'center_x':.5}
                on_press: root.salesTransactions()
		    #on_release: root.generatereport(self)
